<div class="container">
<div class="row">
<div class="col-lg-3"></div>
<div class="col-lg-6 ">

<div class="jumbotron" style="margin-top:50px;">

<h2 class="page-header text-center">好难找后台管理登录</h2>
<%= form_for(@admin, url: {action: :login_check}) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class=>"form-control input-lg" %>
  </div>
  
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :class=>"form-control input-lg" %>
  </div>


  <div class="actions">
    <%= f.submit '登录', :class=>"btn btn-info btn-lg" %>
  </div>
<% end %>

</div>

</div>
<div class="col-lg-3"></div>
</div>
</div>
