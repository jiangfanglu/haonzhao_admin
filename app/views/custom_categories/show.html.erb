<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @custom_category.category.name %>
</p>

<p>
  <strong>Parent Category:</strong>
	<%#= @custom_category.category.parent.name if @custom_category.category.parent %>
  <%#= link_to @custom_category.category.parent.name, action: :show, id: @custom_category.category.parent.custom_category.id if @custom_category.category.parent && @custom_category.category.parent.custom_category %>
	<% if @custom_category.category.parent && @custom_category.category.parent.custom_category %>
	<%= link_to @custom_category.category.parent.name, action: :show, id: @custom_category.category.parent.custom_category.id %>
	<% elsif @custom_category.category.parent %>
	<%= @custom_category.category.parent.name %>
	<% else %>
	<%= 'æ— ' %>
	<% end %>
</p>


