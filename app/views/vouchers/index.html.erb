<h1>礼品卡列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>订单号</th>
      <th>序号</th>
      <th>送出者</th>
      <th>送出者email</th>
      <th>接受者</th>
      <th>接受者email</th>
      <th>礼品卡主题</th>
      <th>Message</th>
      <th>金额</th>
      <th>状态</th>
      <th>创建日期</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.order_id %></td>
        <td><%= voucher.code %></td>
        <td><%= voucher.from_name %></td>
        <td><%= voucher.from_email %></td>
        <td><%= voucher.to_name %></td>
        <td><%= voucher.to_email %></td>
        <td><%= voucher.voucher_theme_id %></td>
        <td><%= voucher.message %></td>
        <td><%= voucher.amount %></td>
        <td><%= voucher.status %></td>
        <td><%= voucher.date_added.strftime('%Y-%m-%d') %></td>
        <td><%= link_to '查看', voucher %></td>
        <td><%= link_to '修改', edit_voucher_path(voucher) %></td>
        <td><%= link_to '删除', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

